#!/usr/bin/env bash

declare -r directory="$HOME/w/b"

check_bookmarks_directory() {
    if [[ ! -e "$directory" ]];then
        echo "error (1): '$directory' does not exist" >&2
        return 1
    fi
    if [[ ! -d "$directory" ]];then
        echo "error (1): '$directory' is not a directory" >&2
        return 1
    fi
    if [[ ! -r "$directory" ]];then
        echo "error (1): '$directory' does not have read permission" >&2
        return 1
    fi
    if [[ ! -x "$directory" ]];then
        echo "error (1): '$directory' does not have execute permission" >&2
        return 1
    fi
}

clipboard() {
    local clipboard
    clipboard="$(xclip -selection clipboard -out)"
    echo "$clipboard"
}

select_file() {
    local files
    files="$(ls -1 "$directory" | dmenu -l 10)"
    echo "$files"
}

select_url() {
    local url
    local file="$1"
    if [[ -n "$file" ]];then
        # select from file
        url="$(cat "$directory/$file" | dmenu -l 10)"
    else
        # select from directory
        url="$(grep --no-filename "^http" "$directory"/* | dmenu -l 10)"
    fi
    echo "$url"
}

open() {
    local url="$1"
    if [[ -n "$url" ]];then
        xdg-open "${url%% *}" &> /dev/null &
        if (( $? == 0 ));then
            disown
        fi
    fi
}

save() {
    local file
    local text
    file="$(select_file)"
    text="$(clipboard)"
    if [[ "$text" != http* ]];then
        return 1
    fi
    echo "$text" >> "$directory"/"$file"
}

open_url() {
    local url
    url="$(select_url)"
    open "$url"
}

open_url_from_file() {
    local url
    local file
    file="$(select_file)"
    url="$(select_url "$file")"
    open "$url"
}

remove_url_from_file() {
    local urls
    local url
    local file
    urls="$(grep "^http" "$directory"/*)"
    urls="${urls//"$directory/"}"
    line="$(echo "$urls" | dmenu -l 10)"
    IFS=:; read -r file url <<< "$line"
    unset IFS
    while read -r line;do
        if [[ "$line" != "$url" ]];then
            echo "$line"
        fi
    done < "$directory"/"$file" > tmp
    mv tmp "$directory"/"$file"
}

main() {
    check_bookmarks_directory || return 1
    local url
    local file
    local action="$1"
    case "$action" in
        save) save ;;
        open) open_url ;;
        open-file) open_url_from_file ;;
        rm) remove_url_from_file ;;
    esac
}

main "$@"

