#!/usr/bin/env bash

declare manual_line
declare manual
manual_line="$(apropos . | awk '{print $1}' | fzf)"
command_name="${manual_line%% *}"
if [[ -n "$command_name" ]];then
    tmux new-window man "$command_name"
    # vim -c "runtime ftplugin/man.vim"\
    #     -c "set filetype=man"\
    #     -c "Man $command_name"\
    #     -c "only"
fi

